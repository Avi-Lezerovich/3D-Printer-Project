    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "generate:api": "openapi-typescript http://localhost:3000/api/v1/spec --output src/core/api/types.ts || echo Skipping API generation",
    "a11y": "vitest run src/__tests__/a11y.test.tsx"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",

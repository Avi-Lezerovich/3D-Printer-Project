    "@react-three/fiber": "^8.18.0",
    "@tanstack/react-query": "^5.85.3",
    "@types/three": "^0.179.0",
    "classnames": "^2.5.1",
    "framer-motion": "^11.1.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.1",
    "recharts": "^2.12.7",
    "socket.io-client": "^4.8.1",
    "three": "^0.164.1",
    "three-stdlib": "^2.30.4",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",

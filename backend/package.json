{
  "name": "3d-printer-backend",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec \"npm run build && node dist/index.js\"",
    "dev:optimized": "nodemon --watch src --ext ts --exec \"npm run build && node dist/optimizedIndex.js\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:optimized": "node start-optimized.js",
    "start:production": "NODE_ENV=production node dist/optimizedIndex.js",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "loadtest": "node scripts/loadtest.js",
    "loadtest:optimized": "BACKEND_URL=http://localhost:3000 node scripts/loadtest.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "node dist/persistence/seed.js",
    "health:check": "curl -s http://localhost:3000/health | jq .",
    "metrics": "curl -s http://localhost:3000/metrics"
  },
  "dependencies": {
    "@3d/shared": "0.2.0",
    "@serialport/parser-readline": "^13.0.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "autocannon": "^7.13.0",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pino": "^9.3.2",
    "pino-http": "^10.3.0",
    "prom-client": "^15.1.3",
    "redis": "^4.7.0",
    "serialport": "^13.0.0",
    "socket.io": "^4.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@prisma/client": "^5.16.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/bull": "^3.15.9",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.14.11",
    "@types/pino-http": "^5.8.4",
    "@types/serialport": "^8.0.5",
    "@types/socket.io": "^3.0.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "nodemon": "^3.1.10",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.6.2",
    "prisma": "^5.16.2",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.0.0",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4",
    "zod-to-json-schema": "^3.22.5"
  }
}
